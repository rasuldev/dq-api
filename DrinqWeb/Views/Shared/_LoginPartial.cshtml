@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Игра<strong class="caret"></strong></a>
                <ul class="dropdown-menu">
                    <li>
                        @Html.ActionLink("Квесты", "Index", "Quests")
                    </li>
                    <li>
                        @Html.ActionLink("Квесты пользователей", "Index", "UserQuests")

                    </li>
                    <li>
                        @Html.ActionLink("Задания", "Index", "Assignments")
                    </li>
                    <li>
                        @Html.ActionLink("Верификация мультимедии", "Index", "VerificationItems")
                    </li>
                    <li>
                        @Html.ActionLink("Пользователи", "Index", "ApplicationUsers")
                    </li>

                </ul>
            </li>
            <li>
                @Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
