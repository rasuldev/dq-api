@model IEnumerable<DrinqWeb.Models.CodeFirstModels.Assignment>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <div class="container-fluid" style="margin-top: 10px; margin-left:10px;margin-right:10px;">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <table class="table table-condensed table-bordered">
                        <thead>
                            <tr class="active">
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TextRequired)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MediaRequired)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sort)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TextCodes)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TextRequired)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MediaRequired)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sort)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TextCodes)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
