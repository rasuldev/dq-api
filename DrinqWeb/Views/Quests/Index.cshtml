@model IEnumerable<DrinqWeb.Models.CodeFirstModels.Quest>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Список</title>
</head>
<body>
    <p style="margin-top: 10px;">
        @Html.ActionLink("Добавить квест", "Create", new { }, new { @class = "btn btn-primary" })
    </p>
    <div class="container-fluid" style="margin-top: 10px; margin-left:10px;margin-right:10px;">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <table class="table table-condensed table-bordered">
                        <thead>
                            <tr class="active">
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaxTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsPublished)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sort)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsDeleted)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaxTime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsPublished)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sort)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsDeleted)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Детали", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
